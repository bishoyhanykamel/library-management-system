@{
    ViewData["Title"] = "Title";
    Layout = "_Layout";
}
<link rel="stylesheet" href="~/css/form_container.css">
<main>
    <section>
        <div class="container">
            <div class="row d-flex justify-content-center align-items-center" id="boxContainer">
                <div class="col-md-9 col-lg-6 text-center p-5">
                    <form class="shadow border-2 rounded-3 p-5" action="">
                        <div asp-validation-summary="All"></div>
                        <h1 class="mb-5">@ViewData["AuthHeader"]</h1>
                        @RenderBody()
                    </form>
                </div>
            </div>
        </div>
    </section>
</main>



@section Scripts {
    <script src="~/js/auth.js"></script>
}
